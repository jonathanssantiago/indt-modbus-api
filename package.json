    "@nestjs/websockets": "^10.3.3",
    "@types/express": "^4.17.21",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "modbus-serial": "^8.0.16",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
